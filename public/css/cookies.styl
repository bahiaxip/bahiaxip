.banner_cookies
    background-color orange
    bottom 0
    display block
    height 50px 
    opacity 0
    position fixed
    width 100%
    z-index 999
.banner_cookies.active
    opacity 1
.div_cookies
    background-color darkgreyboot
    border color8 1px solid
    border-radius 5px
    color color9
    display:none
    min-height 500px
    left 50%
    
    position fixed
    
    transform translate(-50%,-50%)
    top 50%
    max-width 600px
    width 50%
    z-index 999
    .cookies
        margin auto
        .logus
            
            display flex
            height 80px
            
            width 100%
            img
                margin 20px
                width 64px
        
        .cookies_links
            border-bottom color8 1px solid
            display flex
            justify-content center
            margin auto
            button
                background-color transparent
                border color8 1px solid
                color color9
                margin auto 5px
            button.active
                background-color transparent
                border color17 1px solid
                color color17
                
        .cookies_body
            color color8
            height 300px
            padding 30px
            .tab-pane
                background-color transparent
                color #FFF
                .switch
                    margin-bottom 20px
                    input                        
                        border color12 1px solid                        
                    input:focus
                        box-shadow 0px 0px 5px color17
                        
                    input:checked
                        background-color color17
                    input:not(:checked)
                        background-image url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'><circle r='3' fill='rgba(24,210,110,.5)'/></svg>")
            .tab-pane.show
                background-color transparent
                color #FFF
            
        .footer_cookies
            align-self flex-end
            display flex
            height 50px
            margin auto
            width 100%
            z-index 100
            button
                border color17 1px solid
                color white
                margin auto