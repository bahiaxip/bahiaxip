/* box hidden menu */
.hidden_menu
    width 40%
    background rgba(0,0,0,.8)
    position fixed
    z-index 902
    top 0
    left 0
    height 100vh
    padding 0
    margin 0
    transform translateX(-100%)
    transition all .3s  ease
    overflow auto
    font-family  YoutubeB
    font-size 18px
    font-weight bold
.hidden_menu.active
    transform translateX(0%)
    .hidden_list
        padding 0
    .hidden_list li
        cursor pointer
        width 100%
        height 50px
        list-style none
        /*#list_barra li:hover*/
        /*background-color:white;*/
        &:hover
            background-color color6
            
            a
                color  color17
    .hidden_list li a
        align-items center
        display flex
        height 100%        
        color color9
        padding 0 20px
        text-decoration none
        width 100%
    .hidden_list li a:hover
        
        
        /*color:deeppink;*/
    .hidden_list div input[type="text"]
        width 70%    
        display inline-block
