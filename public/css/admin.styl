main
	.minim
		.border_card
			a
				img
					max-height 500px
					margin 0 auto
					width 100%
			.post_title				
				display flex
				font-family QuicksandB
				font-size 22px				
				background-color:transparent
				padding 0
				margin 0
				a
					background-color color10
					color #494949
					display flex
					height 100%
					justify-content center
					padding 10px
					text-decoration none
					width 100%
					&:hover						
						color color1
			.post_card_block
				
				.post_text
					background-color #FFF
					border-top color10 1px solid
					font-family QuicksandB
					font-size 22px
					font-weight bold
					margin auto
					padding 10px
					text-align center
