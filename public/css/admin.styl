/*navegador y barra de navegación*/
#app
	/*background-color rgba(0,0,0,.6)*/
	min-height 100vh
	.bx_nav
		background linear-gradient(to bottom, rgba(0,0,0,.6), rgba(0,0,0,.8) 25%, rgba(0,0,0,.8) 70%,rgba(0,0,0,.6))
		
		padding 0
		height 50px
		a
			color color9
			&:hover
				color #FFF	
		.container
			height 100%
			.bx_navbar
				font-family QuicksandB
				height 100%
				ul.links
					display flex
					margin 0 auto
					height 100%					
					li
						display flex						
						a
							align-items center
							/*border-bottom transparent 3px solid*/
							display flex
							font-family QuicksandB
							padding 5px 20px
							transition all 0.2s ease-out
							&:hover
								background-color color1
								color #FFF
						a.active
							background-color color1
							/*border-bottom color1 3px solid*/
							color #FFF
				ul.nav_user
					margin 0
					height 100%
					li
						display flex
						margin auto
						a
							&:focus
								color color10
						a.active
							background-color color1
							color color10
						
				.dropdown-menu a
					color greyboot
				
				
			




