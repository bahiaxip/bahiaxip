color17 = #18D26E

.cubo_pause         
    display none
    position absolute
    background-image url('../icon/icon_pause.svg')
    background-size 100%
    background-repeat no-repeat
    height 25px
    width 25px
    z-index 999
.cubo2
    /*bottom 300px*/
    will-change transform
    width 25px
    height 25px
    position relative
    transform-style preserve-3d
    animation-name  girar2
    animation-duration 25s
    animation-iteration-count  infinite
    animation-direction  alternate
    animation-play-state running
    animation-delay 3s          
    
    .cara2
        border #46aeff 1px solid
        border-radius 5px
        /*box-shadow: 1px 1px 4px #61e5ff,-1px -1px 4px #61e5ff, 1px -1px 4px #61e5ff,-1px 1px 4px #61e5ff;*/
        box-shadow 0px 0px 5px #000
        display grid
        position absolute
        width 100%
        height 100%
        grid-template-columns: repeat(3, 1fr);          
    #uno                
        transform translateZ(12.5px)
    #dos                
        transform  translateX(12.5px) rotateY(90deg)
    #tres               
        transform  translateZ(-12.5px)
    #cuatro             
        transform  translateX(-12.5px) rotateY(90deg)
    #cinco              
        transform  translateY(-12.5px) rotateX(90deg)
    #seis               
        transform  translateY(12.5px) rotateX(90deg)

    .cuadrado
        border: grey 1px solid;
        border-radius 2px
        box-shadow: 1px 1px 1px black,-1px -1px 1px black, 1px -1px 1px black,-1px 1px 1px black;
    
    .cuadrado.uno
        /*background-color #00bb77*/
        background-color #18D26E
    
    .cuadrado.dos
        background-color #ff8700
    
    .cuadrado.tres
        background-color yellow
    
    .cuadrado.cuatro
        background-color #3190ff
    
    .cuadrado.cinco
        background-color #b851ce
    
    .cuadrado.seis
        background-color white
        
