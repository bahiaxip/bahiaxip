    .div_content
        display flex
        flex-flow column
        font-family YoutubeB
        font-size 13px
        height 100%
        width 100% 
        .text
            align-items center
            color #FFF
            display flex
            font-size 17px
            justify-content center    
            width 100%
            height 50px
            p
                margin 0
        .content
            display flex
            flex-flow column
            height 100%
            justify-content space-around
            .details                
                display flex
                
                ul.tools
                    color #D3D3D3
                    list-style square
            .div_link
                display flex
                justify-content center
                a
                    background-color transparent
                    border color17 1px solid
                    border-radius 4px
                    color #FFF
                    font-size 15px                          
                    overflow hidden
                    padding 3px 15px
                    position relative
                    text-decoration none
                    transition width .5s linear
                    &:hover
                        &:before
                            width 200%
                    span
                        position relative
                a:before
                    background-color color17
                    bottom 0
                    content ''
                    height 100%
                    left -30px
                    position absolute
                    top 0
                    right 0
                    transform skewX(-35deg)
                    transition all .5s linear
                    width 0